{% extends 'base.html.twig' %}

{% block title %}Venta index{% endblock %}

{% block body %}
    <h1>Venta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idventa</th>
                <th>TipoComprobante</th>
                <th>SerieComprobante</th>
                <th>NumeroComprobante</th>
                <th>FechaHora</th>
                <th>Impuesto</th>
                <th>PagoTotal</th>
                <th>Estado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ventum in ventas %}
            <tr>
                <td>{{ ventum.idventa }}</td>
                <td>{{ ventum.tipoComprobante }}</td>
                <td>{{ ventum.serieComprobante }}</td>
                <td>{{ ventum.numeroComprobante }}</td>
                <td>{{ ventum.fechaHora ? ventum.fechaHora|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ventum.impuesto }}</td>
                <td>{{ ventum.pagoTotal }}</td>
                <td>{{ ventum.estado }}</td>
                <td>
                    <a href="{{ path('app_carrito_show', {'idventa': ventum.idventa}) }}">show</a>
                    <a href="{{ path('app_carrito_edit', {'idventa': ventum.idventa}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_carrito_new') }}">Create new</a>
{% endblock %}
