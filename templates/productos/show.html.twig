    <table class="table">
        <tbody>
            <tr>
                <th>Idarticulo</th>
                <td>{{ articulo.idarticulo }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ articulo.nombre }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ articulo.codigo }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ articulo.stock }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
